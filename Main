package javaPack;

import java.util.Scanner;

public class Calculate
{
    // Scanner for user input
    Scanner input = new Scanner(System.in);

    // Ask user to enter all grades, calculate average, GPA, and letter grade
    public void InputGrades(float total)
    {
        float sum = 0;
        float grade;

        // Use for loop instead of while
        for (float count = 0; count < total; count = count + 1)
        {
            System.out.print("Please enter grade #" + (count + 1) + ": ");
            grade = input.nextFloat();

            // Check if grade is between 0 and 100
            if (grade >= 0 && grade <= 100)
            {
                sum = sum + grade; // add grade to total
            }
            else
            {
                System.out.println("Invalid grade. Try again.");
                count = count - 1; // repeat this round
            }
        }

        // Compute the average of all grades
        float average = sum / total;

        // Convert the average to GPA and letter grade using this.
        float gpa = this.ConvertToGPA(average);
        String letter = this.LetterGrade(average);

        // Display the final results
        System.out.println("Average: " + average);
        System.out.println("GPA: " + gpa);
        System.out.println("Letter Grade: " + letter);
    }

    // Convert numeric grade to GPA (scale 1–4)
    public float ConvertToGPA(float grade)
    {
        if (grade >= 90)
        {
            return 4.0f;
        }
        else if (grade >= 80)
        {
            return 3.0f;
        }
        else if (grade >= 70)
        {
            return 2.0f;
        }
        else if (grade >= 60)
        {
            return 1.0f;
        }
        else
        {
            return 0.0f;
        }
    }

    // Return letter grade (A–F) based on numeric score
    public String LetterGrade(float grade)
    {
        if (grade >= 90)
        {
            return "A";
        }
        else if (grade >= 80)
        {
            return "B";
        }
        else if (grade >= 70)
        {
            return "C";
        }
        else if (grade >= 60)
        {
            return "D";
        }
        else
        {
            return "F";
        }
    }
}
