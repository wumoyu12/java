package javaPack;

import java.util.Scanner;

public class CollectInfo
{
    // Create a Scanner object to take user input
    static Scanner allinput = new Scanner(System.in);

    // Create a Calculate object to handle all grade calculations
    Calculate calculator = new Calculate();

    // Constructor automatically starts asking for info
    public CollectInfo()
    {
        AskInfo();
    }

    // Ask the user how many grades they want to average
    public void AskInfo()
    {
        float numgrades;
        boolean yesorno;

        System.out.print("How many grades will you be averaging? ");
        numgrades = allinput.nextFloat(); // get user input
        yesorno = CheckNum(numgrades);    // check if input is valid

        if (yesorno == true)
        {
            // If valid, call the Calculate class to process grades
            this.calculator.InputGrades(numgrades);
        }
        else
        {
            System.out.println("Invalid number of grades.");
        }
    }

    // Check if the number of grades is a valid whole number between 1 and 99
    public boolean CheckNum(float gradenum)
    {
        float isyes = gradenum % 1; // if itâ€™s not an integer, remainder > 0

        if (isyes > 0)
        {
            return false;
        }
        else
        {
            // must be at least 1 and less than 100
            if (gradenum < 1 || gradenum >= 100)
            {
                return false;
            }
            else
            {
                return true;
            }
        }
    }
}
