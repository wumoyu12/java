package javaPack;

public class BubbleSortActivity
{

	public static void main(String[] args)
	{
		int[] arr = {25, 10, 7, 32, 5};
		
		for (int i=0; i < arr.length - 1; i++)
		{
			for (int j = 0; j < arr.length - i - 1; j++)
			{
				if(arr[j] > arr[j + 1])
				{
					int temp = arr[j];
					arr[j] = arr[j + 1];
					arr[j + 1] = temp;
				}
			}
		}
		
		for (int n=0; n<arr.length; n++)
		{
			System.out.print(arr[n] + " ");
		}
	}

}
